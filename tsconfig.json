{
  "include": ["./rollup.config.ts", "./rollup.dts.config.ts", "./src"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false,
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "stripInternal": true,
    "declaration": false,
    "resolveJsonModule": true
  }
}
